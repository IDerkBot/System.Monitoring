<UserControl
    x:Class="SystemMonitoringNetCore.Views.UserControls.SettingsControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:SystemMonitoringNetCore.Views.UserControls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:SystemMonitoringNetCore.ViewModels"
    Width="350"
    HorizontalAlignment="Center"
    VerticalAlignment="Center"
    d:DataContext="{d:DesignInstance vm:SettingsControlViewModel}"
    d:DesignHeight="300"
    mc:Ignorable="d">
    <StackPanel>
        <Label Content="COM Порт для локального подключения к базовой станции" />
        <ComboBox ItemsSource="{Binding ComPorts}" SelectedItem="{Binding Settings.ComPort}" />

        <Button Margin="0,20,0,0" Command="{Binding SaveCommand}" Content="Сохранить" />
    </StackPanel>
</UserControl>

<Page
    x:Class="SystemMonitoringNetCore.Views.Pages.EditPages.AddField"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:wpf="clr-namespace:Arion.Style.AttachedProperties;assembly=Arion.Style"
    Title="AddField"
    HorizontalAlignment="Center"
    VerticalAlignment="Center"
    mc:Ignorable="d">
    <StackPanel Width="300">
        <TextBox
            Name="TbFieldNumber"
            wpf:Hint.Placeholder="Номер поля"
            KeyDown="TbFieldNumber_OnKeyDown"
            MaxLength="16" />
        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
            <Button Margin="5" Click="Cancel_Click" Content="Отмена" />
            <Button Click="Add_Click" Content="Добавить" />
        </StackPanel>
    </StackPanel>
</Page>
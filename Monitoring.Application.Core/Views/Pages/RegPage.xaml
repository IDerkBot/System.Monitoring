<Page
    x:Class="SystemMonitoringNetCore.Views.Pages.RegPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wpf="clr-namespace:Arion.Style.AttachedProperties;assembly=Arion.Style"
    Title="RegPage"
    HorizontalAlignment="Center"
    VerticalAlignment="Center"
    d:DesignHeight="260"
    d:DesignWidth="300"
    mc:Ignorable="d">
    <StackPanel>
        <TextBlock
            FontFamily="Montserrat"
            FontSize="24"
            FontWeight="ExtraBold"
            Text="Регистрация"
            TextAlignment="Center" />
        <TextBox Name="TbLogin" wpf:Hint.Placeholder="Логин" />
        <PasswordBox Name="PbPassword" wpf:Hint.Placeholder="Пароль" />
        <PasswordBox Name="PbConfirm" wpf:Hint.Placeholder="Подтверждение пароля" />
        <Button
            Margin="0,5"
            Click="RegIn_Click"
            Content="Зарегистрироваться" />
        <Button Click="Back_Click" Content="Вернуться" />
    </StackPanel>
</Page>
<UserControl
    x:Class="SystemMonitoringNetCore.Views.Pages.ChartControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:SystemMonitoringNetCore.ViewModels"
    d:DataContext="{d:DesignInstance {x:Type vm:ChartControlViewModel}}"
    d:DesignHeight="1080"
    d:DesignWidth="1920"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal">
            <ComboBox
                Margin="5"
                DisplayMemberPath="Id"
                ItemsSource="{Binding Sensors}"
                SelectedItem="{Binding SelectedSensor}" />
            <ComboBox Margin="5" ItemsSource="{Binding DataList}" SelectedItem="{Binding SelectedData}" />
            <DatePicker Margin="5" />
            <DatePicker Margin="5" />
        </StackPanel>

        <lvc:CartesianChart
            Grid.Row="1"
            Series="{Binding Series}"
            XAxes="{Binding XAxis}"
            YAxes="{Binding YAxis}"
            ZoomMode="X" />
    </Grid>
</UserControl>
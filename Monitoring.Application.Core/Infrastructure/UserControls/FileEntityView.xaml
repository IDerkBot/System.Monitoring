<UserControl
    x:Class="SystemMonitoringNetCore.Infrastructure.UserControls.FileEntityView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:arion="clr-namespace:Arion.Style.Controls;assembly=Arion.Style"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:data="clr-namespace:Monitoring.Models;assembly=Monitoring.Models"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DataContext="{d:DesignInstance data:FileEntityViewModel}"
    MouseDown="FileEntityView_OnMouseDown"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <arion:Icon
            Width="50"
            Height="50"
            Fill="{StaticResource Pr500}"
            Kind="FileWord" />

        <Label Grid.Row="1" Content="{Binding Name}" />
    </Grid>
</UserControl>

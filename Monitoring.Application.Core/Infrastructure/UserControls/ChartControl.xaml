<UserControl
    x:Class="SystemMonitoringNetCore.Infrastructure.UserControls.ChartControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:SystemMonitoringNetCore.ViewModels"
    d:DataContext="{d:DesignInstance {x:Type vm:ChartViewModel}}"
    Loaded="ChartControl_OnLoaded"
    mc:Ignorable="d">
    <lvc:CartesianChart
        Name="Chart"
        Sections="{Binding ActualSection}"
        Series="{Binding ActualSeries}"
        XAxes="{Binding ActualXAxes}"
        YAxes="{Binding ActualYAxes}"
        ZoomMode="X" />
</UserControl>

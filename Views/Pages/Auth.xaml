<Page
    x:Class="SystemMonitoring.Views.Pages.Auth"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    Title="Auth"
    HorizontalAlignment="Center"
    VerticalAlignment="Center"
    d:DesignHeight="310"
    d:DesignWidth="300"
    Loaded="OnLoad"
    mc:Ignorable="d">
    <StackPanel KeyDown="KeyPress">
        <StackPanel Width="300">
            <!--  Title  -->
            <TextBlock
                Width="200"
                FontFamily="Montserrat"
                FontSize="24"
                FontWeight="ExtraBold"
                Text="Авторизация"
                TextAlignment="Center" />
            <!--  Icon  -->
            <md:PackIcon
                Width="100"
                Height="100"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                Kind="Account" />
        </StackPanel>
        <TextBox
            Name="TbLogin"
            md:HintAssist.Hint="Логин"
            md:HintAssist.IsFloating="True" />
        <PasswordBox
            Name="PbPassword"
            md:HintAssist.Hint="Пароль"
            md:HintAssist.IsFloating="True" />
        <CheckBox
            Name="CbRemember"
            Height="15"
            Margin="5"
            VerticalAlignment="Center">
            <TextBlock VerticalAlignment="Center" Text="Запомнить" />
        </CheckBox>
        <Button
            Name="LogInBtn"
            Margin="0,5"
            Click="LogInBtn_Click"
            Content="Войти" />
        <Button Click="RegInBtn_Click" Content="Регистрация" />
    </StackPanel>
</Page>
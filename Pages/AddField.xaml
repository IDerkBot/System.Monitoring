<Page
	x:Class="SystemMonitoring.Pages.AddField"
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
	xmlns:wpfx="clr-namespace:System.Windows.Controls;assembly=PresentationFramework"
	xmlns:xceed="http://schemas.xceed.com/wpf/xaml/toolkit"
	Title="AddField"
	d:DesignHeight="90"
	d:DesignWidth="300"
	mc:Ignorable="d">
	<StackPanel>
		<TextBox
			Name="FieldValue"
			md:HintAssist.Hint="Введите номер поля"
			md:HintAssist.IsFloating="True"
			MaxLength="17"
			TextChanged="FieldValue_OnTextChanged" />
		<StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
			<Button
				Margin="5"
				Click="Cancel_Click"
				Content="Отмена" />
			<Button Click="Add_Click" Content="Добавить" />
		</StackPanel>
	</StackPanel>
</Page>